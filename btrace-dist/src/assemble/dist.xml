
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>dist</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <includes>
                <include>com.sun.btrace:btrace-boot</include>
                <include>com.sun.btrace:btrace-agent</include>
            </includes>
            <binaries>
                <unpack>false</unpack>
                <outputDirectory>btrace/lib/agent</outputDirectory>
            </binaries>
        </moduleSet>
    </moduleSets>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>com.sun.btrace:btrace-samples</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>samples/*</include>
                </includes>
            </unpackOptions>
            <outputDirectory>btrace</outputDirectory>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.sun.btrace:btrace-docs</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>docs/*</include>
                </includes>
            </unpackOptions>
            <outputDirectory>btrace</outputDirectory>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.sun.btrace:dtrace-native:zip</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>btrace/lib/dtrace/${os.arch}</outputDirectory>
        </dependencySet>
        <dependencySet>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <includes>
                <include>com.sun.btrace:btrace-ext-default</include>
                <include>com.sun.btrace:btrace-ext-aggregations</include>
                <include>com.sun.btrace:btrace-ext-collections</include>
                <include>com.sun.btrace:btrace-ext-export</include>
                <include>com.sun.btrace:btrace-ext-profiling</include>
                <include>com.sun.btrace:btrace-ext-sys</include>
            </includes>
            <outputDirectory>btrace/lib/ext</outputDirectory>
            <unpack>false</unpack>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.sun.btrace:btrace-cli</include>
                <include>com.sun.btrace:btrace-core</include>
                <include>com.sun.btrace:btrace-core-api</include>
                <include>com.sun.btrace:btrace-client</include>
                <include>com.sun.btrace:btrace-compiler</include>
                <include>com.sun.btrace:btrace-asm</include>
            </includes>
            <outputDirectory>btrace/lib</outputDirectory>
            <unpack>false</unpack>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/target/bin</directory>
            <outputDirectory>btrace/bin</outputDirectory>
            <fileMode>0777</fileMode>
        </fileSet>
        <fileSet>
            <directory>docs</directory>
            <outputDirectory>btrace/docs</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
