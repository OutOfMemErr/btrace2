
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>      
      <!-- Now, select which projects to include in this module-set. -->
            <includes>
                <include>com.sun.btrace:btrace-asm</include>
                <include>com.sun.btrace:btrace-core</include>
                <include>com.sun.btrace:btrace-api</include>
                <include>com.sun.btrace:btrace-compiler</include>
                <include>com.sun.btrace:btrace-instr</include>
                <include>com.sun.btrace:btrace-boot</include>
                <include>com.sun.btrace:btrace-agent</include>
                <include>com.sun.btrace:btrace-client</include>
                <include>com.sun.btrace:dtrace-java</include>
            </includes>
            <outputDirectory>btrace/lib</outputDirectory>
            <unpack>false</unpack>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.sun.btrace:btrace-samples</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>samples/*</include>
                </includes>
            </unpackOptions>
            <outputDirectory>btrace</outputDirectory>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.sun.btrace:btrace-docs</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>docs/*</include>
                </includes>
            </unpackOptions>
            <outputDirectory>btrace</outputDirectory>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.sun.btrace:btrace:javadoc:javadoc</include>
            </includes>
            <unpackOptions>
                <excludes>
                    <exclude>META-INF/*</exclude>
                    <exclude>META-INF</exclude>
                </excludes>
            </unpackOptions>
            <outputDirectory>btrace/docs/javadoc</outputDirectory>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.sun.btrace:dtrace-native:zip</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>btrace/lib/dtrace/${os.arch}</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/target/bin</directory>
            <outputDirectory>btrace/bin</outputDirectory>
            <fileMode>0555</fileMode>
        </fileSet>
        <fileSet>
            <directory>docs</directory>
            <outputDirectory>btrace/docs</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
