
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>btrace-instr</artifactId>
    <packaging>jar</packaging>

    <name>btrace-instr</name>

    <parent>
        <groupId>com.sun.btrace</groupId>
        <artifactId>btrace</artifactId>
        <relativePath>..</relativePath>
        <version>1.3-SNAPSHOT</version>
    </parent>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <phase>test-compile</phase>
                        <configuration>
                            <target>
                                <echo>Compile Traces</echo>
                                <taskdef resource="net/sf/antcontrib/antlib.xml">
                                    <classpath>
                                        <pathelement location="${ant-contrib:ant-contrib:jar}"/>
                                    </classpath>
                                </taskdef>
                                <uptodate property="traces.uptodate" targetfile="${project.build.testOutputDirectory}/traces.tst">
                                    <srcfiles dir="${basedir}/src/traces" includes="**/*.java"/>
                                </uptodate>
                                <if>
                                    <isset property="traces.uptodate"/>
                                    <then>
                                        <echo>Traces up-to-date. Not compiling.</echo>
                                    </then>
                                    <else>
                                        <echo>Recompiling traces</echo>
                                        <property name="test_classpath" refid="maven.test.classpath"/>
                                        <echo>Classpath = ${test_classpath}</echo>
                                        <for param="file">
                                            <path>
                                                <fileset dir="${basedir}/src/traces" includes="**/*.java"/>
                                            </path>
                                            <sequential>
                                                <echo>Compiling @{file} ...</echo>
                                                <java fork="true" classname="com.sun.btrace.compiler.Compiler" classpath="${test_classpath}">
                                                    <arg line="-cp ${test_classpath} -d ${project.build.testOutputDirectory} @{file}"/>
                                                </java>
                                            </sequential>
                                        </for>
                                        <touch file="${project.build.testOutputDirectory}/traces.tst"/>
                                    </else>
                                </if>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <excludes>
                        <exclude>traces/**/*.java</exclude>
                        <exclude>resources/**/*.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.7</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>btrace-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>sun.jdk</groupId>
            <artifactId>tools</artifactId>
        </dependency>
        <dependency>
            <groupId>asm</groupId>
            <artifactId>asm-util</artifactId>
            <version>3.3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>btrace-compiler</artifactId>
            <version>1.3-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ant-contrib</groupId>
            <artifactId>ant-contrib</artifactId>
            <version>1.0b3</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>btrace-asm</artifactId>
            <version>3.3.1</version>
        </dependency>
    </dependencies>
</project>
